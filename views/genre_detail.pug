extends layout

block content

  h1 Genre: #{genre.name}

  a.btn.btn-primary(href=genre.url+'/update') Update genre
  a.btn.btn-dark(href=genre.url+'/delete') Delete genre
  hr

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in genre_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}
        hr

      else
        p This genre has no books
